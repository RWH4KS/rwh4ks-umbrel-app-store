#!/usr/bin/env bash
set -euo pipefail


cat > .env <<EOF
APP_DATA_DIR=${APP_DATA_DIR:-/data}

# BCHN
BCHN_RPC_USER=${BCHN_RPC_USER:-bchnuser}
BCHN_RPC_PASSWORD=${BCHN_RPC_PASSWORD:-bchnpass}
BCHN_PRUNE_MIB=${BCHN_PRUNE_MIB:-2048}

# MariaDB
MARIADB_DATABASE=${MARIADB_DATABASE:-publicpool}
MARIADB_USER=${MARIADB_USER:-publicpool}
MARIADB_PASSWORD=${MARIADB_PASSWORD:-publicpoolpass}
MARIADB_ROOT_PASSWORD=${MARIADB_ROOT_PASSWORD:-rootpass}
EOF
