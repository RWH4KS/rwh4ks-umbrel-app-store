upstream bchnrpc {
  server bchn:8332;
}

server {
  listen 8332;

  resolver 127.0.0.11 valid=10s ipv6=off;

  location / {
    proxy_http_version 1.1;
    proxy_set_header Host bchn;

    # Inject RPC auth (${BCHN_RPC_BASIC} at container start)
    proxy_set_header Authorization "Basic ${BCHN_RPC_BASIC}";

    proxy_set_header Connection "";
    proxy_pass http://bchnrpc;
  }
}
